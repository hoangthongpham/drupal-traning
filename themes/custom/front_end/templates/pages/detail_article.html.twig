  {% block content %}
    {% if article %}
        <h2>{{ article.getTitle }}</h2>
        {% if article.body %}
          <p>{{ article.body.value|striptags }}</p>
        {% endif %}
        {% if article.field_image.entity %}
          <div style="text-align: center;">
            <img src="{{ file_url(article.field_image.entity.fileuri) }}" alt="Article Image">
          </div>
        {% endif %}
    {% endif %}
  {% endblock %}